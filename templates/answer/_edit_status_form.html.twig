<form class="d-inline" action='{{ path('answer_editStatus', {id: answer.id }) }}' method="POST">
  <fieldset class="d-inline">
    <input class="d-inline" type="hidden" name="_method" value="PATCH">
      {% if answer.isActive %}
        <button type="submit" class="btn btn-info d-inline"><i class="fas fa-eye-slash"></i>&nbsp;Désactiver cette réponse</button>
      {% else %}
        <button type="submit" class="btn btn-warning d-inline"><i class="fas fa-eye"></i>&nbsp;Activer cette réponse</button>
      {% endif %}
  </fieldset>
</form>